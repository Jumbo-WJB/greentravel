<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playmian"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"  
         >

        <SurfaceView
            android:id="@+id/player_surface"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/speak_big"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/speak_big"
            android:visibility="invisible" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/video_content_loading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/motionmian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/head_controller"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/top"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/player_back" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/camera_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" >
        </LinearLayout>

        

        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/network_tip"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:background="@color/orange"
        android:visibility="gone" 
        >
        
        <TextView 
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="正在使用3G/4G网络" 
            />
        
    </LinearLayout>
    
    

    <LinearLayout
        android:id="@+id/camera_controller"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <LinearLayout
            android:id="@+id/speak_linear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:clickable="true"
                android:src="@drawable/speak" />

            <TextView
                android:id="@+id/speak_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-25dp"
                android:text="@string/speak"
                android:textColor="#C0C0C0"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone"
             >

            <ImageView
                android:id="@+id/cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:clickable="true"
                android:src="@drawable/cloud" />

            <TextView
                android:id="@+id/yun_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-25dp"
                android:text="@string/cloud"
                android:textColor="#C0C0C0"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
             >

            <ImageView
                android:id="@+id/clarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:clickable="true"
                android:src="@drawable/cloud" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-25dp"
                android:text="@string/clarity"
                android:textColor="#C0C0C0"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:clickable="true"
                android:src="@drawable/camera" />

            <TextView
                android:id="@+id/camera_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-25dp"
                android:text="@string/camera"
                android:textColor="#C0C0C0"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flip_controller"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/flip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:clickable="true"
                android:src="@drawable/flip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-25dp"
                android:text="@string/flip"
                android:textColor="#C0C0C0"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vda_start_controller"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/vda_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:clickable="true"
                android:src="@drawable/vda" />

            <TextView
                android:id="@+id/vda_start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-25dp"
                android:text="@string/motion"
                android:textColor="#C0C0C0"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vda_app_controller"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/vda_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:src="@drawable/vda_ok" />

            <TextView
                android:id="@+id/vda_app_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-25dp"
                android:text="@string/motionapp"
                android:textColor="#C0C0C0"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    

    <LinearLayout
        android:id="@+id/voice_controller"
        android:layout_width="40dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="#80000000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.sunniwell.sz.flycam.view.VerticalSeekBar
                android:id="@+id/mini_video_volumnbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/player_volumebar_bg"
                android:max="15"
                android:maxHeight="9dp"
                android:minHeight="9dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:progress="15"
                android:progressDrawable="@drawable/volumn_seekbar"
                android:thumb="@drawable/ic_seekbar_thumb"
                android:thumbOffset="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/play_vioce"
                android:layout_width="25sp"
                android:layout_height="30sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/player_mute_bg" />
        </LinearLayout>
    </LinearLayout>

    

    <RelativeLayout
        android:id="@+id/alarm_controller"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/play_lamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/warning_lamp" />
    </RelativeLayout>

   

</RelativeLayout>