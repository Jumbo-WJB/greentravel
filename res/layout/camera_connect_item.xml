<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/listItem_height"
              android:background="@drawable/corner_white"
              android:paddingLeft="10dp"
              android:gravity="center_vertical">
    <LinearLayout
            android:id="@+id/camera_play"
            android:layout_height="@dimen/listItem_height"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        
        <ImageView
                android:id="@+id/camera_item_icon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/listItem_height"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_green"
                android:background="@null"/>

        <TextView
            android:id="@+id/camera_item_text"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="@dimen/listItem_height"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            />
        <CheckBox
                android:id="@+id/camera_item_checkbox"
                android:layout_height="@dimen/checkbox"
                android:layout_width="0dp"
            	android:layout_weight="1"
                android:button="@drawable/cst_checkbox1"
                android:layout_gravity="center_vertical"
                android:checked="false"
                android:focusable="false"
                />

    </LinearLayout>
   
</LinearLayout>